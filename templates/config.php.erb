unset($CFG);
global $CFG;
$CFG = new stdClass();

$CFG->dbtype    = '<%= @dbtype %>';
$CFG->dblibrary = '<%= @dblibrary %>';
$CFG->dbhost    = '<%= @dbhost %>';
$CFG->dbname    = '<%= @dbname %>';
$CFG->dbuser    = '<%= @dbuser %>';
$CFG->dbpass    = '<%= @dbpass %>';
$CFG->prefix    = '<%= @prefix %>';
$CFG->dboptions = array (
<% @dboptions.each do |key,value| -%>
  '<%= key %>' => '<%= value %>',
<% end -%>
);

$CFG->wwwroot   = '<%= @wwwroot %>';
$CFG->dataroot  = '<%= @dataroot %>';
$CFG->admin     = '<%= @admin %>';

$CFG->directorypermissions = <%= @directorypermissions %>;

